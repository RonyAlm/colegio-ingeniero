---
  const { title, slug } = Astro.props
---

<header class="bg-gray-200 min-h-60 flex flex-col gap-2 justify-center items-center">
    <h1 class="text-4xl font-bold text-green-600 mb-6">{title}</h1>
    <div class="flex font-light gap-2 text-gray-600 text-xl">
      <a class="hover:underline hover:text-green-600 transition-colors" href="/">Inicio</a>
      <span>/</span>
      <a class="hover:underline hover:text-green-600 transition-colors"
        href={`/${slug}`}>{title}</a>
    </div>
</header>