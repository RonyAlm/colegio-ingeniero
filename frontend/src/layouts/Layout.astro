---
import "../styles/global.css";
import Header from "../components/Header.astro";
import { getGlobal } from "../lib/strapi";
import Footer from "../components/Footer.astro";
import { transformImgUrl } from "../utils";

interface Props {
  title?: string;
  description?: string;
}

const globalData = await getGlobal();

if (globalData.error) console.log(globalData.error);

const { header, footer, favicon, siteName, siteDescription } =
  globalData?.data || {};

const faviconUrl = transformImgUrl(favicon?.url || "");
const { title = siteName, description = siteDescription } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href={faviconUrl} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header data={header} />
    <div class="mt-20 md:mt-0">
      <slot />
    </div>
    <Footer data={footer} />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: Inter, system-ui, sans-serif;
  }
</style>
