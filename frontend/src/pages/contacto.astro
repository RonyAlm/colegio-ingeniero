---
import LinkIcon from "../components/icons/LinkIcon.astro";
import Layout from "../layouts/Layout.astro";
import SendIcon from "../components/icons/SendIcon.astro";
import HeaderPage from "../components/HeaderPage.astro";
---

<Layout title="Contacto" description="Contacto">
  <HeaderPage title="Contacto" slug="contacto" />
  <main class="md:mt-20">
    <section class="container mx-auto flex flex-col md:flex-row gap-8">
      <article class="w-full md:w-1/2 bg-green-600 text-white  p-8 py-20 md:py-10  md:rounded-2xl">
        <h2 class="text-2xl font-bold mb-8 text-center">
          Información de contacto
        </h2>
        <ul class="space-y-6">
          <li>
            <LinkIcon
              href="https://goo.gl/maps/9zYV6Y7Y7Y7Y7Y7Y7"
              title="Sede Social: Av. Gutnisky N 1870, Formosa"
              icon="map"
              isExternal
            />
          </li>
          <li>
            <LinkIcon
              href="https://goo.gl/maps/9zYV6Y7Y7Y7Y7Y7Y7"
              title="Sede Administrativa: Av. 9 de Julio N 498, Formosa"
              icon="map"
              isExternal
            />
          </li>
          <li>
            <LinkIcon
              href="https://goo.gl/maps/9zYV6Y7Y7Y7Y7Y7Y7"
              title="Hora de atencion: Lunes a Viernes de 8 a 12:30hs"
              icon="hours"
              isExternal
            />
          </li>
          <li>
            <LinkIcon
              href="https://mail.google.com/mail/?view=cm&fs=1&to=7iZ2o@example.com"
              title="Correo: 7iZ2o@example.com"
              icon="email"
              isExternal
            />
          </li>
          <li>
            <LinkIcon
              href="https://tel://456 123 45"
              title="Telefono: 456 123 456"
              icon="phone"
              isExternal
            />
          </li>
          <li>
            <LinkIcon
              href="#"
              title="Whatsapp: 456 123 456"
              icon="whatsapp"
              isExternal
            />
          </li>
        </ul>
        <div class="flex gap-4 mt-10 items-center justify-center">
          <LinkIcon href="#" title="" icon="facebook" isExternal />
          <LinkIcon href="#" title="" icon="instagram" isExternal />
          <LinkIcon href="#" title="" icon="youtube" isExternal />
        </div>
      </article>
      <article class="w-full md:w-1/2 p-8 prose">
        <h2 class="text-2xl font-bold text-green-600">
          Formulario de contacto
        </h2>
        <p class="text-gray-600">
          Buzón para empresas que requieran Ingenieros
        </p>
        <p class="text-gray-600">
          Deja tu mensaje aquí para solicitar Ingenieros. Te acompañaremos a
          buscar el indicado.
        </p>
        <form>
          <div class="mb-4">
            <label for="name" class="block text-gray-500 font-bold mb-2">Nombre:</label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full p-2 border border-gray-300 rounded"/>
          </div>
          <div class="mb-4">
            <label for="email" class="block text-gray-500 font-bold mb-2">Correo:</label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full p-2 border border-gray-300 rounded"/>
          </div>
          <div class="mb-4">
            <label for="phone" class="block text-gray-500 font-bold mb-2">Telefono:</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full p-2 border border-gray-300 rounded"/>
          </div>
          <div class="mb-4">
            <label for="message" class="block text-gray-500 font-bold mb-2">Mensaje:</label>
            <textarea
              id="message"
              name="message"
              class="w-full p-2 border border-gray-300 rounded">
            </textarea>
          </div>
          <button
            type="submit"
            class="w-fit flex items-center bg-green-600 text-white py-4 px-6 rounded-full cursor-pointer hover:bg-green-700 transition-colors">
            Enviar
            <SendIcon class="w-6 h-6 ml-2" />
          </button>
        </form>
      </article>
    </section>
    <section class="w-full md:pt-20">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7160.844530603817!2d-58.17985089240549!3d-26.182938632917292!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x945ca5e57369222b%3A0x397105d62f1efa2d!2sColegio%20P%C3%BAblico%20de%20Ingenieros%20de%20Formosa!5e0!3m2!1ses-419!2sar!4v1768574248478!5m2!1ses-419!2sar"
        width="100%"
        height="450"
        style="border:0;"
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
    </section>
  </main>
</Layout>
